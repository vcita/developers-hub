{
    "type": "object",
    "properties": {
      "uid": {
        "type": "string",
        "description": "Unique identifier of the staffWidgetsBoard object"
      },
      "board_layout": {
        "type": "string",
        "description": "The CSS class of the layout. This will determine the layout of the widgets dashboard based on the class.",
        "enum": [
          "dashboard"
        ]
      },
      "type": {
        "type": "string",
        "description": "the grid frame of the layout, determines the layout frame containing the board",
        "enum": [
          "2*2",
          "3*3",
          "4*4",
          "2*3",
          "3*2",
          "2*4",
          "4*2",
          "3*4",
          "4*3"
        ]
      },
      "sections": {
        "description": "An array of dashboard sections. Each section contains a set of properties defining it and a list of widgets that will be populated into the section once it is displayed",
        "type": "array",
        "items":{
          "code_name": {
            "type": "string",
            "description": "a code name represent type of the section",
            "enum": [
              "TopRight",
              "TopLeft",
              "Top",
              "BottomRight",
              "Bottom,Left",
              "Bottom"
            ]
          },
          "widgets": {
            "description": "An array of widgets uids which will be populated in the section",
            "type": "array",
            "items": {
              "uid": {
                "type": "string",
                "description": "Unique identifier of the widget object"
              },
              "dimensions": {
                "type": "object",
                "description": "Unique identifier of the widget object",
                "properties": {
                  "height": {
                    "type": "integer",
                    "description": "the customized height of the widget."
                  },
                  "width": {
                    "type": "integer",
                    "description": "the customized width of the widget"
                  }
                }
              }
            }
          }
        }
      },
      "created_at": {
        "type": "string",
        "description": "The time the staffWidgetsBoard was created"
      },
      "updated_at": {
        "type": "string",
        "description": "The time the staffWidgetsBoard was last updated"
      }
    },
    "example": {
      "uid": "d290f1ee-6c54-4b01-90e6-d701748f0851",
      "board_layout": "MainAndSideBar3Columns",
      "type": "dashboard",
      "sections": [
          {
              "code_name": "topRight",
              "widgets": [
                {
                  "uid": "d290f1ee-6c54-4b01-90e6-d701748f0851",
                  "dimensions" : {
                    "height": 2,
                    "width": 2
                  }
                },
                {
                  "uid": "d290f1ee-6c54-4b01-90e6-d701748f0833"
                }
              ]
          },
          {
              "code_name": "topLeft",
              "widgets": [
                  {
                    "uid": "d290f1ee-6c54-4b01-90e6-d701748f0851",
                    "dimensions": {
                      "height": 3,
                      "width": 2
                    }
                  }
                ]
          }
      ]
  }
}