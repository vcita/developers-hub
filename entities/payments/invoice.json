{
  "type": "object",
  "definitions": {
    "lineItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Line item name/title"
        },
        "quantity": {
          "type": "number",
          "description": "Line item quantity"
        },
        "unit_amount": {
          "type": "number",
          "description": "Unit price/amount"
        },
        "description": {
          "type": "string",
          "description": "Line item description"
        },
        "entity_uid": {
          "type": "string",
          "description": "UID of related entity (service/product/package)"
        },
        "entity_type": {
          "type": "string",
          "description": "Type of related entity (e.g., \"Service\", \"Product\", \"BookingPackage\")"
        },
        "uid": {
          "type": "string",
          "description": "Line item UID (for updates)"
        },
        "tax_uids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of tax UIDs to apply"
        },
        "discount": {
          "type": "object",
          "description": "Line item discount",
          "properties": {
            "percent": {
              "type": "number",
              "description": "Discount percentage"
            },
            "amount": {
              "type": "number",
              "description": "Discount amount"
            }
          }
        },
        "item_index": {
          "type": "number",
          "description": "Item position/index"
        }
      },
      "required": ["name", "quantity", "unit_amount"]
    }
  },
  "properties": {
    "uid": {
      "type": "string",
      "description": "The invoice's unique identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Created date and time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Updated date and time"
    },
    "matter_uid": {
      "type": "string",
      "description": "Matter/conversation UID"
    },
    "issue_date": {
      "type": "string",
      "format": "date",
      "description": "Invoice issuance date. Must be >= today."
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Invoice due date. Expected date for payment. Must be >= issue_date"
    },
    "currency": {
      "type": "string",
      "description": "Three-letter ISO currency code (e.g., \"USD\", \"ILS\")"
    },
    "status": {
      "type": "string",
      "enum": ["DRAFT", "ISSUED"],
      "description": "Invoice status"
    },
    "unique_number": {
      "type": "string",
      "description": "Invoice unique, sequential number. Two types of numbering: 1. Unique sequence of numbers (1,2,3….) 2. A yearly repeated numbering including a year's prefix (2025-0001, 2025-0002…). Within each year start - rounding the count (2026-0001, 2026-0002,…)"
    },
    "document_title": {
      "type": "string",
      "description": "Invoice title. A document title to appear on top of the PDF. Default: \"INVOICE\""
    },
    "billing_address": {
      "type": "string",
      "description": "Business billing address"
    },
    "purchase_order": {
      "type": "string",
      "description": "Purchase order number"
    },
    "allow_online_payment": {
      "type": "boolean",
      "description": "Enable online payment for this specific invoice"
    },
    "allow_partial_payment": {
      "type": "boolean",
      "description": "Enable partial payments for this specific invoice"
    },
    "enable_late_fee": {
      "type": "boolean",
      "description": "Enable late fee on invoice for this specific invoice"
    },
    "note": {
      "type": "string",
      "description": "Invoice notes/comments"
    },
    "terms_and_conditions": {
      "type": "string",
      "description": "Payment terms and conditions. Appears in the invoice document"
    },
    "additional_recipients": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "CC email recipients (array of email strings)"
    },
    "item_headers": {
      "type": "array",
      "description": "Array of invoice item headers. Item header allows to group invoice items under a header within the invoice's line items. Used when add_item_header feature flag is enabled. At least one of line_items or item_headers must be provided.",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Section name"
          },
          "item_header_index": {
            "type": "number",
            "description": "Section order/index"
          },
          "items": {
            "type": "array",
            "description": "Array of items within this section",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/lineItem"
            }
          }
        },
        "required": ["name", "item_header_index", "items"]
      }
    },
    "display_item_headers_total": {
      "type": "boolean",
      "description": "Display item_headers total"
    },
    "display_items_total": {
      "type": "boolean",
      "description": "Display items total"
    },
    "from_estimate_uid": {
      "type": "string",
      "description": "UID of estimate from which invoice was created"
    },
    "source_name": {
      "type": "string",
      "description": "Source tracking name. Default: \"initiated_by_staff\""
    },
    "line_items": {
      "type": "array",
      "description": "Array of invoice items. Items that are not part of the item_headers. At least one of line_items or item_headers must be provided.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/lineItem"
      }
    }
  },
  "anyOf": [
    {
      "required": [
        "matter_uid",
        "issue_date",
        "due_date",
        "currency",
        "line_items"
      ]
    },
    {
      "required": [
        "matter_uid",
        "issue_date",
        "due_date",
        "currency",
        "item_headers"
      ]
    }
  ],
  "readOnly": [
    "uid",
    "created_at",
    "updated_at"
  ],
  "example": {
    "uid": "inv-aaabbbccc112233",
    "created_at": "2024-01-15T10:00:00.000Z",
    "updated_at": "2024-01-15T10:00:00.000Z",
    "matter_uid": "matter_123",
    "issue_date": "2024-01-15",
    "due_date": "2024-02-15",
    "currency": "USD",
    "status": "ISSUED",
    "unique_number": "2024-0001",
    "document_title": "INVOICE",
    "billing_address": "123 Main St, City, State 12345",
    "purchase_order": "PO-12345",
    "allow_online_payment": true,
    "allow_partial_payment": false,
    "enable_late_fee": false,
    "note": "Thank you for your business",
    "terms_and_conditions": "Payment due within 30 days",
    "additional_recipients": ["accounting@example.com"],
    "display_items_total": true,
    "display_item_headers_total": false,
    "from_estimate_uid": null,
    "source_name": "initiated_by_staff",
    "line_items": [
      {
        "name": "Consulting Services",
        "quantity": 2,
        "unit_amount": 150.00,
        "description": "Hourly consulting",
        "entity_uid": "service_123",
        "entity_type": "Service",
        "tax_uids": ["tax_uid_1"],
        "discount": null,
        "item_index": 0
      }
    ]
  },
  "description": "Invoice entity representing a bill or invoice document with line items, payment terms, and client information."
}

