{
  "uid": "resource",
  "title": "Resource",
  "description": "A specific resource that can be allocated to appointments and events",
  "domain": "scheduling",
  "required": [
    "name",
    "resource_type_uid"
  ],
  "properties": {
    "uid": {
      "type": "string",
      "description": "The entity's unique identifier",
      "readonly": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation date and time",
      "readonly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update date and time",
      "readonly": true
    },
    "resource_type_uid": {
      "type": "string",
      "description": "The resource type this instance belongs to. Links to the ResourceType entity"
    },
    "name": {
      "type": "string",
      "description": "The name of the resource",
      "example": "Treatment Room 1"
    },
    "deleted_at": {
      "type": "string",
      "format": "date-time",
      "description": "Soft delete timestamp. Null for active resources",
      "nullable": true
    }
  }
} 