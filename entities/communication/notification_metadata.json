{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NotificationMetadata",
  "description": "Metadata definition for notification templates and delivery settings.",
  "type": "object",
  "properties": {
    "notification_identifier": {
      "type": "string",
      "description": "Unique identifier name for the notification"
    },
    "channel": {
      "type": "object",
      "description": "Channels through which the notification can be delivered.",
      "properties": {
        "push": { "type": "boolean", "description": "Enable push notification channel." },
        "pane": { "type": "boolean", "description": "Enable in-app pane notification channel." },
        "email": { "type": "boolean", "description": "Enable email notification channel." }
      }
    },
    "deep_link": {
      "type": "string",
      "description": "Optional deep link URL for notification action.",
      "default": ""
    },
    "notification_type": {
      "type": "string",
      "description": "Type/category of the notification."
    },
    "show_in_settings": {
      "type": "boolean",
      "description": "Whether this notification is visible in user settings."
    },
    "text": {
      "type": "object",
      "description": "Localized notification content.",
      "properties": {
        "en": {
          "type": "object",
          "description": "English notification content.",
          "properties": {
            "display_settings": {
              "type": "object",
              "description": "Settings for how the notification is displayed in lists or settings screens.",
              "properties": {
                "notification_name": { "type": "string", "description": "Name of the notification." },
                "notification_description": { "type": "string", "description": "Description of the notification." }
              },
              "required": ["notification_name", "notification_description"]
            },
            "in_app_settings": {
              "type": "object",
              "description": "Settings for in-app (push/pane) notifications.",
              "properties": {
                "in_app_title": { "type": "string", "description": "Title for in-app notification." },
                "in_app_message": { "type": "string", "description": "Message body for in-app notification." }
              },
              "required": ["in_app_title", "in_app_message"]
            },
            "email_settings": {
              "type": "object",
              "description": "Settings for email notifications.",
              "properties": {
                "subject": { "type": "string", "description": "Email subject line." },
                "header_text": { "type": "string", "description": "Header or introduction text for the email." },
                "main_text": { "type": "string", "description": "Main content of the email." },
                "footer_text": { "type": "string", "description": "Footer or closing text for the email." },
                "cta_button": {
                  "type": "object",
                  "description": "Call-to-action button details.",
                  "properties": {
                    "text": { "type": "string", "description": "Button text." },
                    "url": { "type": "string", "description": "Button URL." }
                  },
                  "required": ["text", "url"]
                },
                "top_image": {
                  "type": "object",
                  "description": "Image at the top of the email.",
                  "properties": {
                    "url": { "type": "string", "description": "Image URL." },
                    "width": { "type": "integer", "description": "Image width in pixels." }
                  },
                  "required": ["url", "width"]
                },
                "middle_image": {
                  "type": "object",
                  "description": "Image in the middle of the email.",
                  "properties": {
                    "url": { "type": "string", "description": "Image URL." },
                    "width": { "type": "integer", "description": "Image width in pixels." }
                  },
                  "required": ["url", "width"]
                }
              },
              "required": ["subject", "header_text", "main_text", "footer_text"]
            }
          },
          "required": ["display_settings", "in_app_settings", "email_settings"]
        },
        "_lang": {
          "type": "object",
          "description": "Placeholder for additional languages (optional)."
        }
      },
      "required": ["en"]
    }
  },
  "required": [
    "notification_identifier",
    "channel",
    "show_in_settings",
    "notification_type",
    "text"
  ]
} 