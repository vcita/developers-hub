{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NotificationMetadata",
  "description": "Metadata definition for notification templates and delivery settings.",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique identifier for the entity instance."
    },
    "notification_identifier": {
      "type": "string",
      "description": "Unique identifier name for the notification"
    },
    "notification_type": {
      "type": "string",
      "description": "Type/category of the notification. Must be one of this values",
      "enum": [
        "payments",
        "clients",
        "calendar",
        "booking",
        "marketing",
        "teamchat",
        "scheduling",
        "advertising",
        "group_events",
        "documents",
        "messages",
        "reviews",
        "social",
        "account"
      ]
    },
    "show_in_settings": {
      "type": "boolean",
      "description": "Whether this notification is visible in the staff's notification center settings."
    },
    "content": {
      "type": "object",
      "description": "Localized notification content and email structure.",
      "properties": {
        "display_settings": {
          "type": "object",
          "description": "Settings for how the notification is displayed in the staff's notification center.",
          "properties": {
            "title": {
              "description": "Name of the notification.",
              "$ref": "#/definitions/localizedTextList",
              "minItems": 1,
              "contains": { "type": "object", "properties": { "key": { "const": "en" }, "value": { "type": "string" } }, "required": ["key", "value"] }
            },
            "description": {
              "description": "Description of the notification.",
              "$ref": "#/definitions/localizedTextList",
              "minItems": 1,
              "contains": { "type": "object", "properties": { "key": { "const": "en" }, "value": { "type": "string" } }, "required": ["key", "value"] }
            }
          },
          "required": [
            "title",
            "description"
          ]
        },
        "message_settings": {
          "type": "array",
          "description": "Array containing at most one in_app_settings and/or one email_settings object. At least one is required.",
          "minItems": 1,
          "maxItems": 2,
          "uniqueItems": true,
          "items": {
            "oneOf": [
              {
                "type": "object",
                "title": "in_app_settings",
                "description": "Settings for in-app (push/pane) notifications.",
                "properties": {
                  "title": {
                    "description": "Title for in-app notification.",
                    "$ref": "#/definitions/localizedTextList",
                    "minItems": 1,
                    "contains": { "type": "object", "properties": { "key": { "const": "en" }, "value": { "type": "string" } }, "required": ["key", "value"] }
                  },
                  "message_body": {
                    "description": "Message body for in-app notification.",
                    "$ref": "#/definitions/localizedTextList",
                    "minItems": 1,
                    "contains": { "type": "object", "properties": { "key": { "const": "en" }, "value": { "type": "string" } }, "required": ["key", "value"] }
                  },
                  "deep_link": {
                    "type": "string",
                    "description": "Optional deep link URL for notification action."
                  }
                },
                "required": [
                  "title",
                  "message_body"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "title": "email_settings",
                "description": "The content and configurations of the email.",
                "properties": {
                  "subject": {
                    "description": "Email subject line.",
                    "$ref": "#/definitions/localizedTextList",
                    "minItems": 1,
                    "contains": { "type": "object", "properties": { "key": { "const": "en" }, "value": { "type": "string" } }, "required": ["key", "value"] }
                  },
                  "main_title": {
                    "description": "Header or introduction text for the email.",
                    "$ref": "#/definitions/localizedTextList",
                    "minItems": 1,
                    "contains": { "type": "object", "properties": { "key": { "const": "en" }, "value": { "type": "string" } }, "required": ["key", "value"] }
                  },
                  "main_text": {
                    "description": "Main content of the email.",
                    "$ref": "#/definitions/localizedTextList",
                    "minItems": 1,
                    "contains": { "type": "object", "properties": { "key": { "const": "en" }, "value": { "type": "string" } }, "required": ["key", "value"] }
                  },
                  "top_image": {
                    "type": "object",
                    "description": "Image at the top of the email.",
                    "properties": {
                      "url": {
                        "type": "string",
                        "description": "Image URL."
                      },
                      "width": {
                        "type": "integer",
                        "description": "Image width in pixels."
                      },
                      "alt": {
                        "description": "Alternative text for the image.",
                        "$ref": "#/definitions/localizedTextList"
                      }
                    }
                  },
                  "middle_text": {
                    "description": "Middle content of the email.",
                    "$ref": "#/definitions/localizedTextList"
                  },
                  "middle_image": {
                    "type": "object",
                    "description": "Image in the middle of the email.",
                    "properties": {
                      "url": {
                        "type": "string",
                        "description": "Image URL."
                      },
                      "width": {
                        "type": "integer",
                        "description": "Image width in pixels."
                      },
                      "alt": {
                        "description": "Alternative text for the image.",
                        "$ref": "#/definitions/localizedTextList"
                      }
                    }
                  },
                  "footer_text": {
                    "description": "Footer or closing text for the email.",
                    "$ref": "#/definitions/localizedTextList"
                  },
                  "cta_button": {
                    "type": "object",
                    "description": "Call-to-action button details.",
                    "properties": {
                      "text": {
                        "description": "Button text.",
                        "$ref": "#/definitions/localizedTextList"
                      },
                      "url": {
                        "type": "string",
                        "description": "Button URL."
                      }
                    }
                  },
                  "secondary_cta_button": {
                    "type": "object",
                    "description": "Secondary call-to-action button details.",
                    "properties": {
                      "text": {
                        "description": "Button text.",
                        "$ref": "#/definitions/localizedTextList"
                      },
                      "url": {
                        "type": "string",
                        "description": "Button URL."
                      }
                    }
                  }
                },
                "required": [
                  "subject",
                  "main_title",
                  "main_text"
                ],
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "required": [
        "display_settings",
        "message_settings"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp of when the entity was created."
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp of the last update to the entity."
    }
  },
  "required": [
    "notification_identifier",
    "channel",
    "show_in_settings",
    "notification_type",
    "content"
  ],
  "definitions": {
    "localizedTextList": {
      "type": "array",
      "description": "List of localized strings. Each item is a key-value pair: key is a locale (from enum), value is a string. Each language can appear only once.",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "enum": [
              "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
            ]
          },
          "value": { "type": "string" }
        },
        "required": ["key", "value"],
        "additionalProperties": false
      }
    }
  }
}