{
    "type": "object",
    "properties": {
      "uid": { "type": "string" },
      "created_at": { "type": "string", "format": "date-time" },
      "updated_at": { "type": "string", "format": "date-time" },
      "actions": {
        "type": "array",
        "items": { "$ref": "https://vcita.github.io/developers-hub/entities/ai/AIRecommendedAction.json" }
      },
      "display": { "type": "object",
                    "properties": {
                      "title": { "type": "string" }
                    }
                 },
     "context": { "type": "object",
                    "properties": {
                      "context_uid": { "type": "string" },
                      "context_type": { "type": "string" }
                    }
                 },
      "target_actor_uid": { "type": "string" ,"description":"the actor that should recieve this recommendation"},
      "target_actor_type": { "type": "string" ,"description":"the type of the actor that should recieve this recommendation"},
      "status": { 
        "type": "string", "enum":["dissmissed","expired","viewed","created","fulfilled","partially_fulfilled"] 
    },
      "dismissed_reason": { "type": "string", "enum": ["user", "system"] }
    },
        "example": {
          "uid": "rec-123",
          "created_at": "2025-02-04T12:00:00Z",
          "updated_at": "2025-02-04T12:30:00Z",
          "sources": ["user_message"],
          "actions": [{ "action": "reply", "reason": "Clarification needed", "evidence": ["User asked for price estimate"], "confidence": 0.85 }],
          "user_description": "We recommend replying to the user's message.",
          "fulfilled": false,
          "dismissed": false
        },
    "required": ["uid", "created_at", "expiration_date",  "actions", "user_description", "target_actor_uid","target_actor_type",  "fulfilled", "dismissed"]
  }