{
    "type": "object",
    "properties": {
      "uid": { "type": "string" },
      "created_at": { "type": "string", "format": "date-time" },
      "expiration_date": { "type": "string", "format": "date-time" },
      "updated_at": { "type": "string", "format": "date-time" },
      "sources": {
        "type": "array",
        "items": { "type": "string", "enum": ["user_message", "system_message", "insight"] }
      },
      "actions": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/AIRecommendedAction" }
      },
      "user_description": { "type": "string" },
      "client_uid": { "type": "string" },
      "staff_uid": { "type": "string" },
      "meta_data": { "type": "object" },
      "fulfilled": { "type": "boolean", "default": false },
      "dismissed": { "type": "boolean" , "default": false},
      "dismissed_reason": { "type": "string", "enum": ["user", "system"] }
    },
        "example": {
          "uid": "rec-123",
          "created_at": "2025-02-04T12:00:00Z",
          "updated_at": "2025-02-04T12:30:00Z",
          "sources": ["user_message"],
          "actions": [{ "action": "reply", "reason": "Clarification needed", "evidence": ["User asked for price estimate"], "confidence": 0.85 }],
          "user_description": "We recommend replying to the user's message.",
          "fulfilled": false,
          "dismissed": false
        },
    "required": ["uid", "created_at", "expiration_date",  "actions", "user_description", "staff_uid",  "fulfilled", "dismissed"]
  }