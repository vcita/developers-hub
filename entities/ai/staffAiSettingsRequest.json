{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "StaffAiSettingsRequest",
  "description": "Request payload for updating staff AI settings",
  "type": "object",
  "properties": {
    "ai_recommendations": {
      "$ref": "https://vcita.github.io/developers-hub/entities/ai/staffAiRecommendationsSettings.json"
    }
  },
  "required": ["ai_recommendations"],
  "example": {
    "ai_recommendations": {
      "enable": true,
      "sub_options": {
        "next_best_action": true,
        "estimate": false,
        "scheduling": true
      }
    }
  }
}
