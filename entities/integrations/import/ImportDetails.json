{
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique identifier of the import detail"
    },
    "import_job_uid": {
      "type": "string",
      "description": "Reference to the parent import job"
    },
    "operation": {
      "type": "string",
      "enum": ["create", "update", "skip"],
      "description": "The operation performed for this record"
    },
    "line_number": {
      "type": "number",
      "description": "Line number in the source file"
    },
    "entity": {
      "type": "object",
      "description": "The entity data being imported"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "done", "error"],
      "description": "Current status of the import detail"
    },
    "error_message": {
      "type": "string",
      "description": "Error message if the import failed"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": [
    "uid",
    "import_job_uid",
    "operation",
    "line_number",
    "status",
    "created_at",
    "updated_at"
  ]
}
