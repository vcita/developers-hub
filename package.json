{
  "name": "openapi-unifier",
  "version": "1.0.0",
  "description": "Script to unify OpenAPI JSON files by domain with path normalization",
  "main": "unify-openapi.js",
  "scripts": {
    "unify": "node unify-openapi.js",
    "unify:verbose": "node unify-openapi.js --verbose",
    "unify:dry-run": "node unify-openapi.js --dry-run --verbose",
    "update-readme": "node update-readme-swaggers.js",
    "update-readme:verbose": "node update-readme-swaggers.js --verbose",
    "update-readme:dry-run": "node update-readme-swaggers.js --dry-run --verbose",
    "update-readme:force": "node update-readme-swaggers.js --force --verbose",
    "update-readme-mcp": "node update-readme-mcp.js",
    "update-readme-mcp:verbose": "node update-readme-mcp.js --verbose",
    "update-readme-mcp:dry-run": "node update-readme-mcp.js --dry-run --verbose",
    "update-readme-mcp:force": "node update-readme-mcp.js --force --verbose"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "rdme": "^8.6.0"
  },
  "devDependencies": {},
  "keywords": [
    "openapi",
    "swagger",
    "api",
    "unify",
    "merge"
  ],
