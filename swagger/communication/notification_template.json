      "post": {
        "summary": "Create a NotificationTemplate",
        "description": "Create a new notification template\n\nAvailable for **Staff Tokens**",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code_name": {
                    "type": "string",
                    "description": "Unique identifier name for the notification"
                  },
                  "title": {
                    "type": "array",
                    "description": "Name of the notification in different languages",
                    "items": {
                      "type": "object",
                      "properties": {
                        "key": {
                          "type": "string",
                          "enum": [
                            "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
                          ]
                        },
                        "value": {
                          "type": "string"
                        }
                      },
                      "required": ["key", "value"]
                    }
                  },
                  "description": {
                    "type": "array",
                    "description": "Description of the notification in different languages",
                    "items": {
                      "type": "object",
                      "properties": {
                        "key": {
                          "type": "string",
                          "enum": [
                            "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
                          ]
                        },
                        "value": {
                          "type": "string"
                        }
                      },
                      "required": ["key", "value"]
                    }
                  },
                  "category": {
                    "type": "string",
                    "description": "Category of the notification",
                    "enum": [
                      "payments",
                      "clients",
                      "calendar",
                      "booking",
                      "marketing",
                      "teamchat",
                      "scheduling",
                      "advertising",
                      "group_events",
                      "documents",
                      "messages",
                      "reviews",
                      "social",
                      "account"
                    ]
                  },
                  "configurable_by_staff": {
                    "type": "boolean",
                    "description": "Whether this notification can be configured by a staff member and visible in the notification center"
                  },
                  "content": {
                    "type": "array",
                    "description": "Array containing at most one staff_portal and/or one email object",
                    "items": {
                      "type": "object",
                      "properties": {
                        "staff_portal": {
                          "type": "object",
                          "description": "Settings for in-app (push/pane) notifications",
                          "properties": {
                            "title": {
                              "type": "array",
                              "description": "Title for in-app notification in different languages",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "key": {
                                    "type": "string",
                                    "enum": [
                                      "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
                                    ]
                                  },
                                  "value": {
                                    "type": "string"
                                  }
                                },
                                "required": ["key", "value"]
                              }
                            },
                            "message_body": {
                              "type": "array",
                              "description": "Message body for in-app notification in different languages",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "key": {
                                    "type": "string",
                                    "enum": [
                                      "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
                                    ]
                                  },
                                  "value": {
                                    "type": "string"
                                  }
                                },
                                "required": ["key", "value"]
                              }
                            },
                            "deep_link": {
                              "type": "string",
                              "description": "Optional deep link URL for notification action"
                            }
                          },
                          "required": ["title", "message_body"]
                        },
                        "email": {
                          "type": "object",
                          "description": "The content and configurations of the email",
                          "properties": {
                            "subject": {
                              "type": "array",
                              "description": "Email subject line in different languages",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "key": {
                                    "type": "string",
                                    "enum": [
                                      "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
                                    ]
                                  },
                                  "value": {
                                    "type": "string"
                                  }
                                },
                                "required": ["key", "value"]
                              }
                            },
                            "main_title": {
                              "type": "array",
                              "description": "Header or introduction text for the email in different languages",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "key": {
                                    "type": "string",
                                    "enum": [
                                      "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
                                    ]
                                  },
                                  "value": {
                                    "type": "string"
                                  }
                                },
                                "required": ["key", "value"]
                              }
                            },
                            "main_text": {
                              "type": "array",
                              "description": "Main content of the email in different languages",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "key": {
                                    "type": "string",
                                    "enum": [
                                      "en", "fr", "de", "it", "pl", "pt", "es", "nl", "he", "sl", "en_gb"
                                    ]
                                  },
                                  "value": {
                                    "type": "string"
                                  }
                                },
                                "required": ["key", "value"]
                              }
                            }
                          },
                          "required": ["subject", "main_title", "main_text"]
