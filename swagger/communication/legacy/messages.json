{
  "basePath": "/business/messaging",
  "host": "api.vcita.biz",
  "info": {
    "title": "Business Messaging API",
    "version": "v2.0"
  },
  "paths": {
    "/v1/channels": {
      "post": {
        "consumes": [
          "application/json"
        ],
        "description": "Connecting a business to primitive messaging channel through knowen providers (Supports only nexmo)",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "properties": {
                "channel": {
                  "properties": {
                    "params": {
                      "description": "landline number - Not required",
                      "properties": {
                        "number": {
                          "description": "landline number - Not required",
                          "type": "string"
                        }
                      },
                      "type": "object"
                    },
                    "provider": {
                      "description": "nexmo",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              },
              "type": "object"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Success",
            "examples": {
              "application/json": {
                "data": {
                  "channel": {
                    "business_uid": "Business UID",
                    "country_code": "Alpha 2 country code",
                    "number": "The claimed (Nexmo)",
                    "provider": "The provider",
                    "status": "Number status"
                  },
                  "success": "true / false"
                },
                "success": true
              }
            }
          }
        },
        "security": [
          {
            "default": [
              "business/messaging"
            ]
          }
        ],
        "summary": "Create a mesaging channel",
        "tags": [
          "Messaging Channels"
        ],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-integration": {
          "httpMethod": "POST",
          "responses": {
            "default": {
              "statusCode": "201"
            }
          },
          "type": "http_proxy",
          "uri": "https:///business/messaging/v1/channels"
        },
        "x-auth-type": "Application & Application User"
      }
    },
    "/v1/channels/typing": {
      "post": {
        "consumes": [
          "application/json"
        ],
        "description": "Notify contacts about account typing indicator.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "properties": {
                "contact": {
                  "properties": {
                    "channel_uid": {
                      "type": "string"
                    },
                    "external_uid": {
                      "type": "string"
                    },
                    "source": {
                      "type": "string"
                    },
                    "typing": {
                      "type": "boolean"
                    },
                    "uid": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              },
              "type": "object"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Success",
            "examples": {
              "application/json": {
                "data": {
                  "data": {
                    "data": {
                      "typing": "true / false"
                    },
                    "success": "true / false"
                  },
                  "success": true
                },
                "success": true
              }
            }
          }
        },
        "security": [
          {
            "default": [
              "business/messaging"
            ]
          }
        ],
        "summary": "Notify Typing Indicator",
        "tags": [
          "Typing Indicator"
        ],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-integration": {
          "httpMethod": "POST",
          "responses": {
            "default": {
              "statusCode": "201"
            }
          },
          "type": "http_proxy",
          "uri": "https:///business/messaging/v1/channels/typing"
        },
        "x-auth-type": "Application & Application User"
      }
    }
  },
