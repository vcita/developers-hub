    {
      "name": "Navigation Items",
      "description": "CRUD operations for navigation menu items"
    }
  ],
  "paths": {
    "/v3/apps/navigation_items": {
      "get": {
        "tags": ["Navigation Items"],
        "summary": "List Navigation Items",
        "description": "Retrieve a paginated list of navigation items for the authenticated directory. Supports filtering by parent and mobile availability. Available for **Directory tokens**.",
        "operationId": "listNavigationItems",
        "parameters": [
          {
            "name": "parent_uid",
            "in": "query",
            "required": false,
            "description": "Filter by parent navigation item unique identifier. Use 'null' for root-level items (e.g., \"nav-item-parent123\").",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "available_in_mobile",
            "in": "query",
            "required": false,
            "description": "Filter by whether the navigation item should appear in mobile app navigation (e.g., true, false).",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page number of results (e.g., 1, 2, 3).",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10000,
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "required": false,
            "description": "How many items to return per page. Max: 100 (e.g., 25, 50, 100).",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 25
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Navigation items retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "https://vcita.github.io/developers-hub/entities/response.json"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "navigation_items": {
                              "type": "array",
                              "items": {
                                "$ref": "https://vcita.github.io/developers-hub/entities/apps/navigation_item.json"
                              }
                            }
                          }
                        }
                      }
                    }
                  ]
                },
                "example": {
                  "success": true,
                  "data": {
                    "navigation_items": [
                      {
                        "uid": "nav-item-abc123",
                        "parent_uid": null,
                        "directory_uid": "dir-xyz789",
                        "order": 0,
                        "title": {
                          "en": "Dashboard",
                          "he": "לוח בקרה"
                        },
                        "icon": "icon-Dashboard_POV",
                        "key": "dashboard",
                        "modules": null,
                        "permissions": null,
