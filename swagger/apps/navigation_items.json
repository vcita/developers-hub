  "info": {
    "title": "Navigation Items API",
    "description": "API for managing navigation menu items in the inTandem platform. Enables partners to configure custom navigation structures for their businesses.",
    "version": "3.0.0"
  },
  "servers": [
    {
      "url": "https://api.vcita.biz",
      "description": "Production server"
    }
  ],
