                      "long_description": "Esta es una descripción larga y detallada de la aplicación",
                      "app_features": [
                        "Característica 1",
                        "Característica 2",
                        "Característica 3"
                      ]
                    },
                    "fr": {
                      "name": "Mon App",
                      "short_description": "Ceci est une brève description",
                      "long_description": "Ceci est une description longue et détaillée de l'application",
                      "app_features": [
                        "Fonctionnalité 1",
                        "Fonctionnalité 2",
                        "Fonctionnalité 3"
                      ]
                    },
                    "it": {
                      "name": "La Mia App",
                      "short_description": "Questa è una breve descrizione",
                      "long_description": "Questa è una descrizione lunga e dettagliata dell'app",
                      "app_features": [
                        "Funzione 1",
                        "Funzione 2",
                        "Funzione 3"
                      ]
                    },
                    "pt": {
                      "name": "Meu App",
                      "short_description": "Esta é uma descrição curta",
                      "long_description": "Esta é uma descrição longa e detalhada do aplicativo",
                      "app_features": [
                        "Recurso 1",
