{
  "openapi": "3.0.0",
  "info": {
    "title": "Staff Member API",
    "description": "API for managing staff members",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://api.vcita.biz",
      "description": "API Gateway server"
    }
  ],
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "description": "Provide a valid bearer token in the Authorization header. Example: 'Authorization: Bearer {app_token}'"
      }
    },
    "schemas": {
      "StaffMemberUpdate": {
        "type": "object",
        "properties": {
          "photo_path": {
            "type": "string",
            "description": "The path to the staff member's photo"
          }
        }
      },
      "StaffMemberResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether the API request was successful",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "uid": {
                "type": "string",
                "description": "The unique identifier of the staff member",
                "example": "staff-12345"
              },
              "first_name": {
                "type": "string",
                "description": "The first name of the staff member",
                "example": "John"
              },
              "last_name": {
                "type": "string",
                "description": "The last name of the staff member",
                "example": "Doe"
              },
              "display_name": {
                "type": "string",
                "description": "The display name of the staff member",
                "example": "Dr. John Doe"
              },
              "email": {
                "type": "string",
                "description": "The email address of the staff member",
                "example": "john.doe@example.com"
              },
              "professional_title": {
                "type": "string",
                "description": "The professional title of the staff member",
                "example": "Senior Consultant"
              },
              "business_uid": {
                "type": "string",
                "description": "The business UID the staff member belongs to",
                "example": "business-12345"
              },
              "full_mobile_number": {
                "type": "string",
                "description": "The complete mobile number of the staff member",
                "example": "+12345678901"
              },
              "photo_path": {
                "type": "string",
                "description": "The path to the staff member's photo",
                "example": "/storage/staff/profile/12345.jpg"
              },
              "on_entry_navigate_to": {
                "type": "string",
                "description": "Default navigation path on login",
                "example": "dashboard"
              },
              "role": {
                "type": "string",
                "description": "The role of the staff member",
                "example": "admin"
              },
              "email_signature": {
                "type": "string",
                "description": "The email signature of the staff member",
                "example": "Best regards,\nJohn Doe\nSenior Consultant"
              },
              "owner": {
                "type": "boolean",
                "description": "Whether the staff member is an owner",
                "example": true
              },
              "active": {
                "type": "boolean",
                "description": "Whether the staff member is active",
                "example": true
              },
              "deleted": {
                "type": "boolean",
                "description": "Whether the staff member has been deleted",
                "example": false
              },
              "blocked_at": {
                "type": "string",
                "format": "date-time",
                "description": "The date and time when the staff member was blocked",
                "example": null
              },
              "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "The date and time when the staff member was created",
                "example": "2023-01-01T12:00:00Z"
              },
              "updated_at": {
                "type": "string",
                "format": "date-time",
                "description": "The date and time when the staff member was last updated",
                "example": "2023-01-15T09:30:00Z"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/v3/staff/staff_members/{uid}": {
      "get": {
        "summary": "Get staff member",
        "description": "Retrieve a specific staff member by UID",
        "tags": ["Staff Members"],
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the staff member",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Staff member retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StaffMemberResponse"
                },
                "example": {
                  "success": true,
                  "data": {
                    "uid": "staff-12345",
                    "first_name": "John",
                    "last_name": "Doe",
                    "display_name": "Dr. John Doe",
                    "email": "john.doe@example.com",
                    "professional_title": "Senior Consultant",
                    "business_uid": "business-12345",
                    "full_mobile_number": "+12345678901",
                    "photo_path": "/storage/staff/profile/12345.jpg",
                    "on_entry_navigate_to": "dashboard",
                    "role": "admin",
                    "email_signature": "Best regards,\nJohn Doe\nSenior Consultant",
                    "owner": true,
                    "active": true,
                    "deleted": false,
                    "blocked_at": null,
                    "created_at": "2023-01-01T12:00:00Z",
                    "updated_at": "2023-01-15T09:30:00Z"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Staff member not found"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      },
      "put": {
        "summary": "Update staff member photo",
        "description": "Update a staff member's photo path",
        "tags": ["Staff Members"],
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the staff member",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StaffMemberUpdate"
              },
              "example": {
                "photo_path": "/storage/staff/profile/12345_new.jpg"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Staff member updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StaffMemberResponse"
                },
                "example": {
                  "success": true,
                  "data": {
                    "uid": "staff-12345",
                    "first_name": "John",
                    "last_name": "Doe",
                    "display_name": "Dr. John Doe",
                    "email": "john.doe@example.com",
                    "professional_title": "Senior Consultant",
                    "business_uid": "business-12345",
                    "full_mobile_number": "+12345678901",
                    "photo_path": "/storage/staff/profile/12345_new.jpg",
                    "on_entry_navigate_to": "dashboard",
                    "role": "admin",
                    "email_signature": "Best regards,\nJohn Doe\nSenior Consultant",
                    "owner": true,
                    "active": true,
                    "deleted": false,
                    "blocked_at": null,
                    "created_at": "2023-01-01T12:00:00Z",
                    "updated_at": "2023-02-10T15:45:00Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Staff member not found"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    }
  }
}