{
    "openapi": "3.0.0",
    "info": {
      "title": "License (internal)",
      "version": "1.0.0"
    },
    "paths": {
      "/license/business_carts": {
        "get": {
          "summary": "Get all BusinessCarts",
          "responses": {
            "200": {
              "description": "List of carts",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "https://vcita.github.io/developers-hub/entities/license/businessCart.json"
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new cart",
          "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                    "schema": {
                        "properties": {
                            "business_uid": {
                                "type": "string",
                                "description": "Unique identifier of the business",
                                "maxLength": 16
                            },
                            "offering_uid": {
                                "type": "string",
                                "description": "Unique identifier of the underlying offering."
                            }       
                        },
                        "required": [
                            "business_uid",
                            "offering_uid"
                        ]
                    }
                }
            }
          },
          "responses": {
            "201": {
              "description": "Cart created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "https://vcita.github.io/developers-hub/entities/license/businessCart.json"
                  }
                }
              }
            }
          }
        }
      },
      "/license/business_carts/{uid}": {
        "get": {
          "summary": "Retrieve a BusinessCart ",
          "parameters": [
            {
              "name": "uid",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "The BusinessCart details",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "https://vcita.github.io/developers-hub/entities/license/businessCart.json"
                  }
                }
              }
            }
          }
        },
        "put": {
          "summary": "Update the BusinessCart",
          "parameters": [
            {
                "name": "uid",
                "in": "path",
                "required": true,
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "subscription_uid": {
                        "type": "string",
                        "description": "Unique identifier of the corresponding subscription."
                    }       
                }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "BusinessCart updated successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "https://vcita.github.io/developers-hub/entities/license/businessCart.json"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  