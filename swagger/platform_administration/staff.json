{
  "openapi": "3.0.0",
  "info": {
    "title": "Staff API",
    "description": "API for staff-related operations",
    "version": "1.0"
  },
  "paths": {
    "/v3/staff/staff_quick_action_lists": {
      "get": {
        "tags": ["Staff Quick Action Lists"],
        "summary": "Get relevant quick action lists per staff",
        "description": "A quick action entity represents a configurable shortcut displayed in the staff's dashboard, allowing personalized access to key system functions.",
        "parameters": [
          {
            "name": "visible_quick_action",
            "in": "query",
            "description": "Include this param in the search query to retrieve only the visible actions",
            "required": false,
            "schema":{
              "type": "boolean"
            }
          },
          {
            "name": "Authorization",
            "in": "header",
            "description": "Staff token",
            "required": true,
            "schema":{
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "https://vcita.github.io/developers-hub/entities/response.json"
                    },
                    {
                      "properties": {
                        "success": {
                          "type": "boolean",
                          "example": true
                        },
                        "data": {
                          "$ref": "https://vcita.github.io/developers-hub/entities/staff/staff_quick_action_list.json"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. The bearer token is missing, invalid or not allowed to access the requested resource.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "errors": [
                    {
                      "code": "unauthorized",
                      "message": "401 Unauthorized"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Not Found. The requested resource was not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "The requested resource was not found."
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Staff Quick Action Lists"],
        "summary": "Update quick action lists for a specific staff member",
        "description": "Update the order and visibility of quick actions for a specific staff member",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Staff token",
            "required": true,
            "type": "string"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "staff_uid": {
                    "type": "string",
                    "description": "Unique identifier of the staff member"
                  },
                  "quick_actions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Name of the quick action"
                        },
                        "order": {
                          "type": "integer",
                          "description": "Display order of the quick action"
                        },
                        "visible_quick_action": {
                          "type": "boolean",
                          "description": "Controls whether this quick action appears on the staff dashboard. Note: A maximum of 6 quick actions can be set to visible at any time."
                        }
                      },
                      "required": ["name", "order", "visible_quick_action"]
                    }
                  }
                },
                "required": ["staff_uid", "quick_actions"]
              },
              "examples": {
                "update_quick_actions": {
                  "value": {
                    "staff_uid": "staff_12345",
                    "quick_actions": [
                      {
                        "name": "point_of_sale",
                        "order": 0,
                        "visible_quick_action": true
                      },
                      {
                        "name": "appointment",
                        "order": 1,
                        "visible_quick_action": true
                      },
                      {
                        "name": "event",
                        "order": 2,
                        "visible_quick_action": true
                      },
                      {
                        "name": "request_signature",
                        "order": 3,
                        "visible_quick_action": false
                      },
                      {
                        "name": "schedule_payment",
                        "order": 4,
                        "visible_quick_action": true
                      },
                      {
                        "name": "portal",
                        "order": 5,
                        "visible_quick_action": false
                      },
                      {
                        "name": "announcement",
                        "order": 6,
                        "visible_quick_action": false
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "https://vcita.github.io/developers-hub/entities/response.json"
                    },
                    {
                      "properties": {
                        "data": {
                          "type": "object",
                          "$ref": "https://vcita.github.io/developers-hub/entities/staff/staff_quick_action_list.json"

                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Error. The request is invalid. (missing required fields, invalid values, etc.)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "errors": [
                    {
                      "code": "missing_field",
                      "message": "Missing mandatory field."
                    },
                    {
                      "code": "invalid",
                      "message": "more than 6 quick actions are set to visible."
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. The bearer token is missing, invalid or not allowed to access the requested resource.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "errors": [
                    {
                      "code": "unauthorized",
                      "message": "401 Unauthorized"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Not Found. The requested resource was not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "Staff Not Found: The specified staff does not exist."
                }
              }
            }
          }
        }
      }
    }
  }
} 