{
  "basePath": "/business/staffs",
  "host": "api.vcita.biz",
  "info": {
    "title": "Staff related API",
    "version": "v2.0"
  },
  "paths": {
    "/v1/daily_staff_sign_ins": {
      "get": {
        "consumes": [
          "application/json"
        ],
        "description": "## Overview\nGet daily sign-in records for the business's staff members within a specified date range.\n\nAvailable for **Staff and Directory Tokens**.",
        "parameters": [
          {
            "description": "Required filter by date range using nested query parameter format. Both start_date and end_date are required. The results include both the start and end dates.<br /><br />**Validation Rules:**<br />- Date range cannot exceed 31 days<br />- start_date must be before or equal to end_date<br /><br />**Format:** `filter[start_date][eq]=YYYY-MM-DD&filter[end_date][eq]=YYYY-MM-DD`<br /><br />**Example:** `filter[start_date][eq]=2026-01-01&filter[end_date][eq]=2026-01-15`",
            "in": "query",
            "name": "filter",
            "required": true,
            "type": "string",
            "x-example": "filter[start_date][eq]=2026-01-01&filter[end_date][eq]=2026-01-15"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "examples": {
              "application/json": {
                "data": {
                  "business_uid": "j2pur8uyc6ixpi7d",
                  "sign_ins_by_platform": [
                    {
                      "platform": "mobile",
                      "sign_ins_by_date": {
                        "2023-11-10": [
                          "6oyq22tigyk680xy",
                          "519ca2f28b1a4b9a",
                          "2f28b1atigy22tik"
                        ]
                      }
                    },
                    {
                      "platform": "desktop",
                      "sign_ins_by_date": {
                        "2023-11-16": [
                          "6oyq22tigyk680xy"
                        ]
                      }
                    }
                  ]
                },
                "success": true
              }
            },
            "schema": {
              "properties": {
                "data": {
                  "properties": {
                    "business_uid": {
                      "type": "string"
                    },
                    "sign_ins_by_platform": {
                      "items": {
                        "properties": {
                          "platform": {
                            "type": "string"
                          },
                          "sign_ins_by_date": {
                            "type": "object",
                            "description": "Object with date strings as keys (format: YYYY-MM-DD) and arrays of staff UIDs as values. The keys are dynamic dates within the requested date range.",
                            "additionalProperties": {
                              "type": "array",
                              "items": {
                                "type": "string",
                                "description": "Staff UID"
                              },
                              "description": "Array of staff UIDs who signed in on this date"
                            }
                          }
                        },
                        "type": "object"
                      },
                      "type": "array"
                    }
                  },
                  "type": "object"
                },
                "success": {
                  "type": "boolean"
                }
              },
              "type": "object"
            }
          },
          "422": {
            "description": "Failure",
            "examples": {
              "application/json": {
                "errors": [
                  {
                    "code": "invalid",
                    "field": "start_date",
                    "message": "start_date field must be a valid date parameter. Example, 2000-01-30"
                  }
                ],
                "success": false
              }
            },
            "schema": {
              "properties": {
                "errors": {
                  "items": {
                    "properties": {
                      "code": {
                        "type": "string"
                      },
                      "field": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "type": "object"
                  },
                  "type": "array"
                },
                "success": {
                  "type": "boolean"
                }
              },
              "type": "object"
            }
          }
        },
        "security": [
          {
            "default": [
              "business/staffs"
            ]
          }
        ],
        "summary": "Daily Staff Sign-ins",
        "tags": [
          "Staff activity"
        ],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-integration": {
          "httpMethod": "GET",
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "type": "http_proxy",
          "uri": "https:///business/staffs/v1/daily_staff_sign_ins"
        },
        "x-auth-type": "Application & Application User"
      }
    },
    "/v1/staffs/{uid}": {
      "put": {
        "consumes": [
          "application/json"
        ],
        "description": "## Overview\nUpdates a staff's properties. Available for **Directory tokens only**.\n\n> **Note**: The `X-On-Behalf-Of` header is required to specify which business's staff member to update.\n\n> **For Staff Self-Update**: Staff members who want to update their own details should use `PUT /v3/business_administration/staff_members/{uid}` with a Staff token instead.",
        "parameters": [
          {
            "description": "Required. The business UID whose staff member is being updated. Can be the Business UID or nickname/external ID.",
            "in": "header",
            "name": "X-On-Behalf-Of",
            "required": true,
            "type": "string"
          },
          {
            "description": "User id of the staff to be updated",
            "in": "path",
            "name": "uid",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "properties": {
                "staff": {
                  "properties": {
                    "active": {
                      "description": "Staff active/inactive. A valid value [true/false].",
                      "type": "boolean"
                    },
                    "display_name": {
                      "description": "Staff display name. No longer than 255 characters, no HTML or new lines.",
                      "type": "string"
                    },
                    "email": {
                      "description": "Staff email. Valid email format, unique email.",
                      "type": "string"
                    },
                    "first_name": {
                      "description": "Staff first name. No longer than 255 characters, no HTML or new lines.",
                      "type": "string"
                    },
                    "last_name": {
                      "description": "Staff last name. No longer than 255 characters, no HTML or new lines.",
                      "type": "string"
                    },
                    "role": {
                      "description": "Please use the new Access Control API: https://developers.intandem.tech/v3.0/docs/main-concepts",
                      "type": "string"
                    },
                    "sms_notifications_on": {
                      "description": "Staff SMS notifications on/off. A valid value [true/false].",
                      "type": "boolean"
                    }
                  },
                  "type": "object"
                }
              },
              "required": [
                "staff"
              ],
              "type": "object"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "examples": {
              "application/json": {
                "data": {
                  "staff": {
                    "business_role_display_name": null,
                    "created_at": "2025-08-05T09:56:05.197+03:00",
                    "display_name": "Eve Schulist",
                    "email": "clarice.schimmel@hermann.com",
                    "first_name": "Eve",
                    "last_name": "Schulist",
                    "role": "admin",
                    "uid": "b6d0d3a246169924",
                    "updated_at": "2025-08-05T09:56:05.280+03:00"
                  }
                },
                "success": true
              }
            }
          }
        },
        "security": [
          {
            "default": [
              "business/staffs"
            ]
          }
        ],
        "summary": "Updates a staff's properties",
        "tags": [
          "Staff"
        ],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-integration": {
          "httpMethod": "PUT",
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "type": "http_proxy",
          "uri": "https:///business/staffs/v1/staffs/{uid}"
        },
        "x-auth-type": "Application & Application User"
      }
    }
  },
  "securityDefinitions": {
    "default": {
      "authorizationUrl": "https://ignore.myclients.io",
      "flow": "implicit",
      "scopes": {
        "business/staffs": "All staffs related operations from the business side",
        "business/staffs_create": "business/staffs create scope",
        "business/staffs_delete": "business/staffs delete scope",
        "business/staffs_read": "business/staffs read scope",
        "business/staffs_update": "business/staffs update scope"
      },
      "type": "oauth2",
      "x-scopes-bindings": {
        "business/staffs": "",
        "business/staffs_create": "",
        "business/staffs_delete": "",
        "business/staffs_read": "",
        "business/staffs_update": ""
      }
    }
  },
  "swagger": "2.0",
  "x-throttling-tier": "8ReqPerSec",
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Provide a valid bearer token in the Authorization header. Example: 'Authorization: Bearer {app_token}'"
      }
    }
  }
}
