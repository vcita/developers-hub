{
    "openapi": "3.0.0",
    "info": {
        "title": "bizai",
        "description": "",
        "version": "3.0",
        "contact": {}
    },
    "tags": [
        {
          "name": "AIChats",
          "description": ""
        },
        {
          "name": "AIChatMessages",
          "description": ""
        }
      ],
    "servers": [],
    "components": {
        "schemas": {
            "AgentConfigDto": {
                "type": "object",
                "properties": {
                    "instruction": {
                        "type": "string",
                        "description": "The agent persona",
                        "example": "You are a comedian assistant. Answer with a joke at the end of each message."
                    }
                }
            },
            "CreateChatRequestDto": {
                "type": "object",
                "properties": {
                    "agent": {
                        "type": "string",
                        "description": "The agent name",
                        "example": "vanilla"
                    },
                    "metadata": {
                        "description": "The agent configuration",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/AgentConfigDto"
                            }
                        ]
                    }
                },
                "required": [
                    "agent"
                ]
            },
            "MessageContentDto": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "text"
                    },
                    "content": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/TextContentDto"
                            },
                            {
                                "$ref": "#/components/schemas/PromptContentDto"
                            }
                        ]
                    }
                },
                "required": [
                    "type",
                    "content"
                ]
            },
            "TextContentDto": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "The text content",
                    "example": "Tell me a joke!"
                  }
                },
                "required": [
                  "text"
                ],
                "example": {
                  "text": "Tell me a joke!"
                }
            },
            "PromptContentDto": {
                "type": "object",
                "properties": {
                  "uid": {
                    "type": "string",
                    "description": "The unique identifier (UID) of the prompt",
                    "example": "prompt-xyz123"
                  },
                  "variables": {
                    "type": "object",
                    "description": "The variables associated with the prompt",
                    "example": {
                      "name": "John",
                      "age": 30
                    }
                  }
                },
                "required": [
                  "uid",
                  "variables"
                ],
                "example": {
                  "uid": "prompt-xyz123",
                  "variables": {
                    "name": "John",
                    "age": 30
                  }
                }
              },
            "SendMessageRequestDto": {
                "type": "object",
                "properties": {
                    "ai_chat_uid": {
                        "type": "string",
                        "description": "The unique identifier of the chat you want to send a message to"
                    },
                    "content": {
                        "description": "The message content",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/MessageContentDto"
                            }
                        ]
                    },
                    "streaming": {
                        "type": "boolean",
                        "description": "Stream response option. If true, the response will be streamed to the client. If false, the response will be sent as a single message.",
                        "default": true
                    }
                },
                "required": [
                    "ai_chat_uid",
                    "content"
                ]
            }
            
        }
    },
    "paths": {
        "/v3/bizai/ai_chats": {
            "get": {
                "operationId": "ChatsController_getChats",
                "summary": "Get all chats",
                "description": "Get a list of all ongoing chat sessions",
                "tags": [
                    "AIChats"
                ],
                "parameters": [
                    {
                        "name": "page",
                        "required": false,
                        "in": "query",
                        "description": "Page number of results.",
                        "schema": {
                            "minimum": 1,
                            "maximum": 10000,
                            "default": 1,
                            "type": "number"
                        }
                    },
                    {
                        "name": "per_page",
                        "required": false,
                        "in": "query",
                        "description": "How many items to return per page. Max: 100",
                        "schema": {
                            "minimum": 1,
                            "maximum": 100,
                            "default": 25,
                            "type": "number"
                        }
                    },
                    {
                        "description": "Sort by fields. Example: sort=created_at:asc,updated_at:desc",
                        "name": "sort",
                        "required": false,
                        "in": "query",
                        "schema": {
                            "default": "updated_at:desc",
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "https://vcita.github.io/developers-hub/entities/response.json"
                                        },
                                        {
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "$ref": "https://vcita.github.io/developers-hub/entities/bizai/AIChat.json"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "operationId": "ChatsController_createChat",
                "summary": "Create a chat",
                "description": "Create a new chat session between a user and an agent",
                "tags": [
                    "AIChats"
                ],
                "parameters": [],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateChatRequestDto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "https://vcita.github.io/developers-hub/entities/response.json"
                                        },
                                        {
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "$ref": "https://vcita.github.io/developers-hub/entities/bizai/AIChat.json"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v3/bizai/ai_chats/{uid}": {
            "get": {
                "operationId": "ChatsController_getChat",
                "summary": "Retrieve a chat",
                "description": "Get a specific chat session based on itâ€™s unique identifier (UID)",
                "tags": [
                    "AIChats"
                ],
                "parameters": [
                    {
                        "name": "uid",
                        "required": true,
                        "in": "path",
                        "description": "The unique identifier of the chat",
                        "schema": {
                            "type": "string"
                        },
                        "example": "94ca2054-3bb0-4788-8e9e-ee2442975cdd"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "https://vcita.github.io/developers-hub/entities/response.json"
                                        },
                                        {
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "$ref": "https://vcita.github.io/developers-hub/entities/bizai/AIChat.json"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v3/bizai/ai_chat_messages": {
            "get": {
                "operationId": "ChatMessagesController_getMessages",
                "summary": "List all AI messages",
                "description": "Get all AI messages exchanged within a specific chat",
                "tags": [
                    "AIChatMessages"
                ],
                "parameters": [
                    {
                        "name": "ai_chat_uid",
                        "required": true,
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "required": false,
                        "in": "query",
                        "description": "Page number of results.",
                        "schema": {
                            "minimum": 1,
                            "maximum": 10000,
                            "default": 1,
                            "type": "number"
                        }
                    },
                    {
                        "name": "per_page",
                        "required": false,
                        "in": "query",
                        "description": "How many items to return per page. Max: 100",
                        "schema": {
                            "minimum": 1,
                            "maximum": 100,
                            "default": 25,
                            "type": "number"
                        }
                    },
                    {
                        "description": "Sort by fields. Example: sort=created_at:asc,updated_at:desc",
                        "name": "sort",
                        "required": false,
                        "in": "query",
                        "schema": {
                            "default": "updated_at:desc",
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "https://vcita.github.io/developers-hub/entities/response.json"
                                        },
                                        {
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "$ref": "https://vcita.github.io/developers-hub/entities/bizai/AIChatMessage.json"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "operationId": "ChatMessagesController_createMessage",
                "summary": "Create a new message in a chat thread and get an AI response",
                "tags": [
                    "AIChatMessages"
                ],
                "parameters": [],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SendMessageRequestDto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "https://vcita.github.io/developers-hub/entities/bizai/AIChatStreamMessage.json"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}