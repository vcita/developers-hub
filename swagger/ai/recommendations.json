{
  "openapi": "3.0.0",
  "info": {
    "title": "AI Recommendation API",
    "version": "1.0.0",
    "description": "API for managing AI Recommendations and Recommended Actions"
  },
  "paths": {
    "v3/ai/ai_recommendations": {
      "get": {
        "summary": "Get all AIRecommendations",
        "description": "Get all AIRecommendations /n**available for Staff tokens**",
        "security": [{ "x-auth": [] }],
        "responses": {
          "200": {
            "description": "A list of AIRecommendations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/AIRecommendation" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create an AIRecommendation",
        "description": "Create an AIRecommendation /n**available for Staff tokens**",
        "security": [{ "x-auth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AIRecommendation" }
            }
          }
        },
        "responses": {
          "201": { "description": "AIRecommendation created" }
        }
      }
    },
    "v3/ai//ai_recommendations/{uid}": {
      "get": {
        "summary": "Retrieve an AIRecommendation",
        "description": "Retrieve an AIRecommendation /n**available for Staff tokens**",
        "security": [{ "x-auth": [] }],
        "parameters": [{ "name": "uid", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": {
            "description": "An AIRecommendation",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/AIRecommendation" } }
            }
          }
        }
      },
      "put": {
        "summary": "Update AIRecommendation",
        "description": "Update an AIRecommendation /n**available for Staff tokens**",
        "security": [{ "x-auth": [] }],
        "parameters": [{ "name": "uid", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "https://vcita.github.io/developers-hub/entities/ai/AIRecommendation.json" }
            }
          }
        },
        "responses": {
          "200": { "description": "AIRecommendation updated" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AIRecommendation": {
        "type": "object",
        "properties": {
          "uid": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "expiration_date": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" },
          "sources": {
            "type": "array",
            "items": { "type": "string", "enum": ["user_message", "system_message", "insight"] }
          },
          "actions": {
            "type": "array",
            "items": { "$ref": "https://vcita.github.io/developers-hub/entities/ai/AIRecommendedAction.json" }
          },
          "user_description": { "type": "string" },
          "client_uid": { "type": "string" },
          "staff_uid": { "type": "string" },
          "meta_data": { "type": "object" },
          "fulfilled": { "type": "boolean" },
          "dismissed": { "type": "boolean" },
          "dismissed_reason": { "type": "string", "enum": ["user", "system"] }
        }
      },
      "AIRecommendedAction": {
        "type": "object",
        "properties": {
          "uid": { "type": "string" },
          "action": { "type": "string", "enum": ["reply", "estimate", "schedule"] },
          "reason": { "type": "string" },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "confidence": { "type": "number", "format": "float" }
        }
      }
    }
  }
}
