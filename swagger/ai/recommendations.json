{
  "openapi": "3.0.0",
  "info": {
    "title": "AI Recommendation API",
    "version": "1.0.0",
    "description": "API for managing AI Recommendations and Recommended Actions"
  },
  "paths": {
    "/v3/ai/ai_recommendations": {
      "get": {
        "tags": ["AI Recommendations"],
        "summary": "Get all AIRecommendations",
        "description": "Get all AIRecommendations \n**available for Staff tokens**",
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "A list of AIRecommendations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "https://vcita.github.io/developers-hub/entities/ai/AIRecommendation.json" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["AI Recommendations"],
        "summary": "Create an AIRecommendation",
        "description": "Create an AIRecommendation \n**available for Staff tokens**",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AIRecommendationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "AIRecommendation created",
            "content": {
              "application/json": {
                "schema": { "$ref": "https://vcita.github.io/developers-hub/entities/ai/AIRecommendation.json" }
              }
            }
          }
        }
      }
    },
    "/v3/ai/ai_recommendations/{uid}": {
      "get": {
        "tags": ["AI Recommendations"],
        "summary": "Get a single AIRecommendation",
        "description": "Retrieve a specific AIRecommendation by UID \n**available for Staff tokens**",
        "security": [{ "Bearer": [] }],
        "parameters": [{
          "name": "uid",
          "in": "path",
          "required": true,
          "schema": { "type": "string" }
        }],
        "responses": {
          "200": {
            "description": "AIRecommendation retrieved",
            "content": {
              "application/json": {
                "schema": { "$ref": "https://vcita.github.io/developers-hub/entities/ai/AIRecommendation.json" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["AI Recommendations"],
        "summary": "Update an AIRecommendation",
        "description": "Update an existing AIRecommendation by UID \n**available for Staff tokens**",
        "security": [{ "Bearer": [] }],
        "parameters": [{
          "name": "uid",
          "in": "path",
          "required": true,
          "schema": { "type": "string" }
        }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AIRecommendationRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AIRecommendation updated",
            "content": {
              "application/json": {
                "schema": { "$ref": "https://vcita.github.io/developers-hub/entities/ai/AIRecommendation.json" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "description": "Authentication method using a Bearer token. Include the token in the Authorization header. Example: 'Authorization: Bearer {app_token}'"
      }
    },
    "schemas": {

      "AIRecommendationRequest": {
        "type": "object",
        "properties": {
          "user_description": { "type": "string" },
          "client_uid": { "type": "string" },
          "staff_uid": { "type": "string" },
          "meta_data": { "type": "object" },
          "sources": {
            "type": "array",
            "items": { "type": "string", "enum": ["user_message", "system_message", "insight"] }
          },
          "actions": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/AIRecommendedAction" }
          }
        },
        "required": ["user_description", "staff_uid", "sources", "actions"]
      },
      "AIRecommendedAction": {
        "type": "object",
        "externalDocs": {
          "description": "Full schema definition hosted externally",
          "url": "https://external-server.com/schemas/AIRecommendedAction"
        }
      }
    }
  }
}
